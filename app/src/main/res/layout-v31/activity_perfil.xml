<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section con Foto de Perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="24dp">

            <!-- Foto de Perfil - MÁS GRANDE -->
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_placeholder"
                android:background="@color/terciario"
                android:padding="4dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/foto_de_perfil_de_mar_a_gonz_lez"
                android:elevation="6dp"
                android:clipToOutline="true" />

            <!-- Información de Usuario -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mar_a_gonz_lez"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/madrid_espa_a"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Verifications Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@color/terciario"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verificaciones"
                android:textColor="@color/texto_oscuro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_verificado"
                android:textColor="@color/texto_oscuro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tel_fono_verificado"
                android:textColor="@color/texto_oscuro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/identidad_verificada"
                android:textColor="@color/texto_oscuro" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primario"
            android:layout_marginVertical="16dp" />

        <!-- Tab Menu -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/terciario">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habilidades" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rese_as" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sobre_m" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Content Area -->
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp">

            <!-- Habilidades Content (Default) -->
            <LinearLayout
                android:id="@+id/habilidadesContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:visibility="visible"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contenido_de_habilidades"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/marketing_digital"
                    android:textColor="@color/texto_oscuro"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/programaci_n"
                    android:textColor="@color/texto_oscuro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dise_o_gr_fico"
                    android:textColor="@color/texto_oscuro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesti_n_de_proyectos"
                    android:textColor="@color/texto_oscuro" />

            </LinearLayout>

            <!-- Reseñas Content -->
            <LinearLayout
                android:id="@+id/resenasContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:visibility="gone"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reseñas de Usuarios"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Reseña 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/terciario"
                    android:padding="12dp"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/carlos_mendoza"
                            android:textColor="@color/texto_oscuro"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hace_1_semana"
                            android:textColor="@color/texto_oscuro"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kk"
                        android:textColor="@color/secundario"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/excelente_experiencia_intercambiando_conocimientos_de_marketing_digital_por_programaci_n_mar_a_es_muy_paciente_y_explica_muy_bien_los_conceptos"
                        android:textColor="@color/texto_oscuro"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Sobre Mí Content -->
            <LinearLayout
                android:id="@+id/sobreMiContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:visibility="gone"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sobre_mg"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/soy_mar_a_especialista_en_marketing_digital_con_m_s_de_5_a_os_de_experiencia_en_el_sector_me_apasiona_compartir_conocimientos_y_aprender_de_los_dem_s_a_trav_s_del_intercambio_de_habilidades"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/intereses"
                    android:textColor="@color/texto_oscuro"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tecnolog_a_n_marketing_digital_n_programaci_n_n_dise_o_n_emprendimiento"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">



            <Button
                android:id="@+id/btnSolicitarIntercambio"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/solicitar_intercambio"
                android:backgroundTint="@color/secundario"
                android:textColor="@color/texto_oscuro"
                android:layout_marginStart="8dp"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>