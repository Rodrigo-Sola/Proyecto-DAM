<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Nueva Habilidad"
            android:textColor="@color/texto_oscuro"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card del Formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:elevation="4dp"
            android:clipToOutline="true">

            <!-- Nombre de la Habilidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la Habilidad *"
                android:textColor="@color/texto_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/terciario"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreHabilidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Programación en Java, Marketing Digital..."
                    android:textColor="@color/texto_oscuro"
                    android:textColorHint="@color/texto_oscuro" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Categoría -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría *"
                android:textColor="@color/texto_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/terciario"
                android:minHeight="48dp"
                android:padding="12dp"
                android:popupBackground="@color/white"
                android:entries="@array/categorias_habilidades" />

            <!-- Nivel de Habilidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de Habilidad *"
                android:textColor="@color/texto_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/terciario"
                android:minHeight="48dp"
                android:padding="12dp"
                android:popupBackground="@color/white"
                android:entries="@array/niveles_habilidad" />

            <!-- Descripción Breve -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción Breve"
                android:textColor="@color/texto_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/terciario"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top"
                    android:hint="Describe brevemente tu experiencia con esta habilidad..."
                    android:textColor="@color/texto_oscuro"
                    android:textColorHint="@color/texto_oscuro"
                    android:inputType="textMultiLine"
                    android:maxLines="5" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Disponibilidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Días Disponibles *"
                android:textColor="@color/texto_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@color/terciario"
                android:padding="12dp">

                <!-- Disponibilidad -->
                <!-- Disponibilidad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Días Disponibles *"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:background="@color/terciario"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <CheckBox
                            android:id="@+id/cbLunes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lunes"
                            android:textColor="@color/texto_oscuro"
                            app:buttonTint="@color/primario" />

                        <CheckBox
                            android:id="@+id/cbMartes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Martes"
                            android:textColor="@color/texto_oscuro"
                            app:buttonTint="@color/primario" />

                        <CheckBox
                            android:id="@+id/cbMiercoles"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Miércoles"
                            android:textColor="@color/texto_oscuro"
                            app:buttonTint="@color/primario" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="8dp">

                        <CheckBox
                            android:id="@+id/cbJueves"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jueves"
                            android:textColor="@color/texto_oscuro"
                            app:buttonTint="@color/primario" />

                        <CheckBox
                            android:id="@+id/cbViernes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Viernes"
                            android:textColor="@color/texto_oscuro"
                            app:buttonTint="@color/primario" />

                        <CheckBox
                            android:id="@+id/cbSabado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sábado"
                            android:textColor="@color/texto_oscuro"
                            app:buttonTint="@color/primario" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbDomingo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Domingo"
                        android:textColor="@color/texto_oscuro"
                        app:buttonTint="@color/primario"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Horario Disponible -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario Disponible"
                android:textColor="@color/texto_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De:"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <!-- Hora Inicio - Click para abrir TimePicker -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundColor="@color/terciario"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHoraInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="09:00"
                        android:textColor="@color/texto_oscuro"
                        android:textColorHint="@color/texto_oscuro"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a:"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp" />

                <!-- Hora Fin - Click para abrir TimePicker -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundColor="@color/terciario"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHoraFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="18:00"
                        android:textColor="@color/texto_oscuro"
                        android:textColorHint="@color/texto_oscuro"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Foto del Diploma/Certificado (Opcional) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certificado o Diploma (Opcional)"
                android:textColor="@color/texto_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btnSeleccionarArchivo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Seleccionar Archivo"
                    android:backgroundTint="@color/terciario"
                    android:textColor="@color/texto_oscuro"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvNombreArchivo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ningún archivo seleccionado"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Botones de Acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:backgroundTint="@color/terciario"
                    android:textColor="@color/texto_oscuro"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Guardar Habilidad"
                    android:backgroundTint="@color/primario"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Lista de Habilidades Existentes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Habilidades"
            android:textColor="@color/texto_oscuro"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Contenedor dinámico para las habilidades -->
        <LinearLayout
            android:id="@+id/containerHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Mensaje cuando no hay habilidades -->
        <TextView
            android:id="@+id/tvNoHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tienes habilidades registradas aún.\nAgrega tu primera habilidad usando el formulario de arriba."
            android:textColor="@color/texto_oscuro"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
