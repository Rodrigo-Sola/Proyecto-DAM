<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section con Foto de Perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="24dp">

            <!-- Foto de Perfil - MÁS GRANDE -->
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginEnd="20dp"
                android:background="@color/terciario"
                android:clipToOutline="true"
                android:contentDescription="@string/m"
                android:elevation="6dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_placeholder"
                tools:targetApi="31" />

            <!-- Información de Usuario -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mar_a_gonz_lezu"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/noso"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Verifications Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/terciario"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Verificaciones"
                android:textColor="@color/texto_oscuro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_verificado1"
                android:textColor="@color/texto_oscuro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Teléfono verificado"
                android:textColor="@color/texto_oscuro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Identidad verificada"
                android:textColor="@color/texto_oscuro" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/primario" />

        <!-- Tab Menu -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/terciario">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habilidades" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reseñas" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sobre_mi" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Content Area -->
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp">

            <!-- Habilidades Content (Default) - MODIFICADO -->
            <LinearLayout
                android:id="@+id/habilidadesContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habilidades que ofrezco"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Fila 1 de habilidades -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Marketing Digital"
                    android:textColor="@color/texto_oscuro" />
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Chip Diseño UI/UX -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/terciario"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diseño UI/UX"
                            android:textColor="@color/texto_oscuro"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ×"
                            android:textColor="@color/primario"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <!-- Chip Marketing Digital -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/terciario"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marketing Digital"
                            android:textColor="@color/texto_oscuro"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ×"
                            android:textColor="@color/primario"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Fila 2 de habilidades -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16px">

                    <!-- Chip Cocina Italiana -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/terciario"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cocina Italiana"
                            android:textColor="@color/texto_oscuro"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ×"
                            android:textColor="@color/primario"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Campo para agregar nueva habilidad CON BOTÓN + -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@color/terciario"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNuevaHabilidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ej: Programación en Python..."
                            android:textColor="@color/texto_oscuro"
                            android:textColorHint="@color/texto_oscuro" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón + para agregar -->
                    <Button
                        android:id="@+id/btnAgregarHabilidad"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="+"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/primario"
                        android:textColor="@color/white"
                        android:elevation="4dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Reseñas Content -->
            <LinearLayout
                android:id="@+id/resenasContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reseñas de Usuarios"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Reseña 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/terciario"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Carlos Mendoza"
                            android:textColor="@color/texto_oscuro"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hace 1 semana"
                            android:textColor="@color/texto_oscuro"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="★★★★★"
                        android:textColor="@color/secundario"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Excelente experiencia intercambiando conocimientos de marketing digital por programación. María es muy paciente y explica muy bien los conceptos."
                        android:textColor="@color/texto_oscuro"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Sobre Mí Content -->
            <LinearLayout
                android:id="@+id/sobreMiContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sobre Mí"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Soy María, especialista en marketing digital con más de 5 años de experiencia en el sector. Me apasiona compartir conocimientos y aprender de los demás a través del intercambio de habilidades."
                    android:textColor="@color/texto_oscuro"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Intereses:"
                    android:textColor="@color/texto_oscuro"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Tecnología\n• Marketing Digital\n• Programación\n• Diseño\n• Emprendimiento"
                    android:textColor="@color/texto_oscuro"
                    android:textSize="14sp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnSolicitarIntercambio"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/secundario"
                android:text="@string/solicitar_intercambioH"
                android:textColor="@color/texto_oscuro" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>