<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Home2Activity">

    <TextView
        android:id="@+id/Userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textColor="@color/texto_oscuro"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- Título Nuevas Coincidencias -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nuevas Coincidencias"
        android:textColor="@color/texto_oscuro"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Scroll horizontal para las coincidencias -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/usuariosContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Las cards de usuarios se cargarán dinámicamente -->
        </LinearLayout>
    </HorizontalScrollView>


    <!-- Enlace "Ver todas" -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text="Ver todas"
        android:textColor="@color/primario"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Sección de Sesiones Pendientes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Sesiones Pendientes"
        android:textColor="@color/texto_oscuro"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Tarjeta de sesión 1 -->

    <!-- Tarjeta de sesión 2 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/reunionesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Las reuniones se cargarán dinámicamente aquí -->

        </LinearLayout>


    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>