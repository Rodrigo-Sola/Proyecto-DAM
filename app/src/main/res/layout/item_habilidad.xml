<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Header con nombre y botón eliminar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvNombreHabilidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre de la Habilidad"
            android:textColor="@color/texto_oscuro"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar habilidad"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/primario" />

    </LinearLayout>

    <!-- Categoría -->
    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textColor="@color/texto_oscuro"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Nivel -->
    <TextView
        android:id="@+id/tvNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel: Intermedio"
        android:textColor="@color/primario"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp" />

    <!-- Disponibilidad -->
    <TextView
        android:id="@+id/tvDisponibilidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disponible: Lunes a Viernes - 9:00 a 18:00"
        android:textColor="@color/texto_oscuro"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción de la habilidad"
        android:textColor="@color/texto_oscuro"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />

</LinearLayout>

